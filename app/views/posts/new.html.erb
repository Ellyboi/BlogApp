<%= form_with model: @post, url: user_posts_path(current_user), local: true do |form| %>
  <%= form.text_field :title,  class:"form-control", placeholder: "Post Title" %><br/>
  <%= form.text_area :text, class:"form-control", placeholder:"post content" %>
  <%= form.hidden_field :user_id, value: current_user.id %> <br/>
  <%= form.submit 'Create Post', class: "btn btn-secondary" %>
<% end %>

